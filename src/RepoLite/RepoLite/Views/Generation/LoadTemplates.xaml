<Window x:Class="RepoLite.Views.Generation.LoadTemplates"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RepoLite.Views.Generation"
        mc:Ignorable="d"
        Title="LoadTemplates" Height="110" Width="300">
    <Grid>
        <StackPanel>
            <ComboBox Margin="10"  ItemsSource="{Binding Path=Items}" SelectedItem="{Binding Path=SelectedItem}"></ComboBox>
            <DockPanel HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <Button Content="Load" Margin="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Command="{Binding Path=Load}"/>
                <Button Content="Close" Margin="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Command="{Binding Path=Close}"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
